{% schema %}
{
  "name": "Footer Custom",
  "tag": "footer",
  "class": "footer-custom",
  "settings": [
    {
      "type": "image_picker",
      "label": "Logo",
      "id": "logo-fr"
    },
    {
      "type": "inline_richtext",
      "label": "Title",
      "id": "title-fr"
    },
    {
      "type": "inline_richtext",
      "label": "Description",
      "id": "description-fr"
    },
    {
      "type": "checkbox",
      "label": "Show Sign-Up",
      "id": "show_sign-up-fr",
      "default": false
    },
    {
      "type": "checkbox",
      "label": "Social Media Icons",
      "id": "social_media_icons-fr",
      "default": true
    },
    {
      "type": "header",
      "content": "Header Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "Text",
      "name": "Links",
      "settings": [
        {
          "type": "text",
          "label": "Heading",
          "id": "heading-fr"
        },
        {
          "type": "link_list",
          "label": "Menu",
          "id": "menu-fr"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer Custom"
    }
  ]
}
{% endschema %}