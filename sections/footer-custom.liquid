{{ 'footer-custom.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="footer-custom page-width footer-{{ section.id }} section-{{ section.id }}-padding">
<div class="footer-content">
  {% if section.settings.logo-fr %}
    {{ section.settings.logo-fr| image_url: width: 150 | image_tag: class: 'logo-fr' }}
  {% endif %}
  {% if section.settings.title-fr %}
    <h2 class="title-fr">{{ section.settings.title-fr }}</h2>
  {% endif %}
  {% if section.settings.description-fr %}
    <p class="description-fr">{{ section.settings.description-fr }}</p>
  {% endif %}
    <div class="list-flex">
      {% for blocks in section.blocks %}
        <details class="list-items-link-fr" open>
          {% for links in blocks.settings.menu-fr.links %}
           {{ links.title | link_to: links.url }}
          {% endfor %}
          <summary  class="list-item-heading-fr">
            {% if blocks.settings.heading-fr %}
              <h4 class="heading-fr">{{ blocks.settings.heading-fr }}</h4>
            {% endif %}
          </summary>
        </details>
      {% endfor %}
    </div>
</div>
      
    <div class="footer-signup">
  {% if section.settings.show_sign-up-fr == true %}
      <div class="email-form">
      <h3 class="email-text">Join our mailing list</h3>
        <div class="input-flex">
      <input type="text" placeholder="" class="input-field">
      <button class="join-button">Join</button>
          </div>
    </div>
  {% endif %}
  
    {% if section.settings.social_media_icons-fr == true %}
      <div class="footer-social">
        <a href="#"><img src="{{ 'instagram.svg' | asset_url }}" width="24" height="24" /></a>
        <a href="#"><img src="{{ 'Frame.svg' | asset_url }}" width="24" height="24" /></a>
        <a href="#"><img src="{{ 'facebook.svg' | asset_url }}" width="24" height="24" /></a>
        <a href="#"><img src="{{ 'linkedin.svg' | asset_url }}" width="24" height="24" /></a>
    </div>
    {% endif %}

</div>
    
  </div>
  <hr class="line-fr">
