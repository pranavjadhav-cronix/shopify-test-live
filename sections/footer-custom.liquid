{{ 'footer-custom.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="footer-custom page-width footer-{{ section.id }} section-{{ section.id }}-padding">
<div class="footer-content">
  {{ section.settings.logo-fr| image_url: width: 150 | image_tag: class: 'logo-fr' }}
  <h2 class="title-fr">{{ section.settings.title-fr }}</h2>
  <p class="description-fr">{{ section.settings.description-fr }}</p>
    <div class="list-flex">
  {% for blocks in section.blocks %}
    <ul class="menu-list-fr">
      <li class="list-item-heading-fr">
        <h4 class="heading-fr">{{ blocks.settings.heading-fr }}</h4>
      </li>
      <li class="list-items-link-fr">
        {% for links in blocks.settings.menu-fr.links %}
         {{ links.title | link_to: links.url }}
        {% endfor %}
      </li>
    </ul>
  {% endfor %}
    </div>
      
</div>
      

  {% if section.settings.show_sign-up == true %}
    <div class="footer-signup">
    <h3>Join our mailing list</h3>
    
    <div class="email-form">
    <input type="text" placeholder="" class="input-field">
    <button class="join-button">Join</button>
    </div>
    
  </div>
  {% endif %}
  
</div>



{% schema %}
{
  "name": "Footer Custom",
  "tag": "footer",
  "class": "footer-custom",
  "settings": [
    {
      "type": "image_picker",
      "label": "Logo",
      "id": "logo-fr"
    },
    {
      "type": "inline_richtext",
      "label": "Title",
      "id": "title-fr"
    },
    {
      "type": "inline_richtext",
      "label": "Description",
      "id": "description-fr"
    },
    {
      "type": "checkbox",
      "label": "Show Sign-Up",
      "id": "show_sign-up",
      "default": false
    },
    {
      "type": "header",
      "content": "Header Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "Text",
      "name": "Links",
      "settings": [
        {
          "type": "text",
          "label": "Heading",
          "id": "heading-fr"
        },
        {
          "type": "link_list",
          "label": "Menu",
          "id": "menu-fr"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer Custom"
    }
  ]
}
{% endschema %}