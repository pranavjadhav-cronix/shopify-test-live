{{ 'section-image-banner-cust.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }} .img_content:before {
    opacity: {{ section.settings.image_overlay }}%;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="section-{{ section.id }} section-{{ section.id }}-padding">
  
  <div class="img_content">
    {% if section.settings.image_with_text_banner %}
      {{ section.settings.image_with_text_banner | image_url: width: 1300 | image_tag: class: 'image_bg' }}
    {% endif %}
    
    {% for block in section.blocks %}
      {% if block.settings.inline_title %}
        <h2 class="heading">{{ block.settings.inline_title }}</h2>
        <style>        
          .section-{{ section.id }} .img_content .heading {
              color: {{ block.settings.text_color }};
          }
        </style>
      {% endif %}

      {% if block.settings.button-ib-1 %}
        <a href="{{ block.settings.button-ib-link-1 }}">{{ block.settings.button-ib-1 }}</a>
      {% endif %}
      
      {% if block.settings.button-ib-2 %}
        <a href="{{ block.settings.button-ib-link-2 }}">{{ block.settings.button-ib-2 }}</a>
        
          {% if block.settings.button-ib-2 %}
            <style>
              
            </style>
          {% endif %}
        
      {% endif %}
      
    {% endfor %}

  </div>
</section>

{% schema %}
  {
    "name": "Image Banner Custom",
    "class": "image-banner-custom",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "header",
        "content": "Image"
      },
      {
        "type": "image_picker",
        "id": "image_with_text_banner",
        "label": "Image"
      },
      {
        "type": "range",
        "id": "image_overlay",
        "min": 10,
        "max": 100,
        "step": 10,
        "unit": "%",
        "label": "Image Overlay",
        "default": 20
      }, 
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 40
      }, 
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 52
      }
    ],
  "blocks": [
        {
      "type": "text",
      "name": "text",
      "settings": [
        {
          "type": "header",
          "content": "Heading"
        },
        {
          "type": "inline_richtext",
          "id": "inline_title",
          "label": "Title"
        }, 
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Colour",
          "default": "#ffffff"
        },
      ]
    },
    {
      "type": "buttons",
      "name": "Buttons",
      "settings": [
        {
          "type": "text",
          "label": "First Button",
          "id": "button-ib-1",
          "default": "Get a demo"
        },
        {
          "type": "url",
          "label": "First Button Link",
          "id": "button-ib-link-1"
        },
        {
          "type": "checkbox",
          "label": "Outline Button",
          "id": "outline_button-ib-1",
          "default": true
        },
        {
          "type": "text",
          "label": "Second Button",
          "id": "button-ib-2",
          "default": "Sign up for free"
        },
        {
          "type": "url",
          "label": "Second Button Link",
          "id": "button-ib-link-2"
        },
        {
          "type": "checkbox",
          "label": "Solid Button",
          "id": "solid_button-ib-2",
          "default": true
        },
        {
          "type": "color",
          "label": "Solid Button Background",
          "id": "solid_button_background",
          "default": "#d8c826"
        },
        {
          "type": "color",
          "label": "Solid Button Text",
          "id": "solid_button_text"
        },
      ]
    }
  ],
    "presets": [
      {
        "name": "Image Banner Custom"
      }
    ]
  }
{% endschema %}

