{{ 'section-image-banner-cust.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }} .img_content:before {
    opacity: {{ section.settings.image_overlay }}%;
  }

  .section-{{ section.id }} .img_content .heading {
    color: {{ section.settings.text_color }};
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="section-{{ section.id }} section-{{ section.id }}-padding">

  <div class="page-width">
    <p class="navigator">Home > Trade sign up</p>
  </div>
  
  <div class="img_content">
    {% if section.settings.image_with_text_banner != blank %}
      {{ section.settings.image_with_text_banner | image_url: width: 1300 | image_tag: class: 'image_bg' }}
    {% endif %}
    
    {% if section.settings.inline_title != blank %}
    {% if section.settings.show_title == true %}
        <h2 class="heading">{{ section.settings.inline_title }}</h2>
    {% endif %}
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Image Banner Custom",
    "class": "image-banner-custom",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "header",
        "content": "Image"
      },
      {
        "type": "image_picker",
        "id": "image_with_text_banner",
        "label": "Image"
      },
      {
        "type": "range",
        "id": "image_overlay",
        "min": 10,
        "max": 100,
        "step": 10,
        "unit": "%",
        "label": "Image Overlay",
        "default": 20
      },
      {
        "type": "header",
        "content": "Heading"
      }, {
        "type": "inline_richtext",
        "id": "inline_title",
        "default": "B2B Partnership Portal",
        "label": "Title"
      }, {
        "type": "checkbox",
        "id": "show_title",
        "label": "Show Text",
        "default": true
      }, {
        "type": "color",
        "id": "text_color",
        "label": "Text Colour",
        "default": "#ffffff"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 40
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 52
      }
    ],
  "blocks": [
    {
      "type": "buttons",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "label": "Button 1",
          "id": "button-ib-1",
          "default": "Get a demo"
        },
        {
          "type": "checkbox",
          "label": "Outline Button",
          "id": "outline_button-ib-1",
          "default": true
        },
        {
          "type": "text",
          "label": "Button 2",
          "id": "button-ib-2",
          "default": "Sign up for free"
        },
        {
          "type": "checkbox",
          "label": "Solid Button",
          "id": "solid_button-ib-2",
          "default": true
        }
      ]
    }
  ],
    "presets": [
      {
        "name": "Image Banner Custom"
      }
    ]
  }
{% endschema %}

